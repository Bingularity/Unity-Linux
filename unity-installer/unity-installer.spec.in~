%define altname draklive-install

Summary:	Live installer for Unity-Linux
Name:		unity-installer
Version:	@VERSION@
Release:	@RELEASE@
Source0:	%{name}-%{version}.tar.xz
License:	GPL
Group:		System/Configuration/Other
Url:		http://svn.unity-linux.org

BuildArch:      noarch
BuildRequires:	intltool
#Requires:	draklive-install
%define _requires_exceptions perl(install_any)\\|perl(install_steps)

%description
This tool allows to install Unity-Linux and associated Branches from a running live CD.

%prep
%setup -q

%build
%make

%install
rm -rf %{buildroot}

#makeinstall

install -d -m 0755 %{buildroot}/%{_sbindir}
install -d -m 0755 %{buildroot}/%{_datadir}
cat > %{buildroot}/%{_sbindir}/%{name} <<EOF
#!/bin/sh
cd %_datadir/%{name}
./draklive-install
EOF
chmod 0755 %{buildroot}/%{_sbindir}/%{name}
cp draklive-install %{buildroot}/%{_datadir}
#find_lang %altname

%files 
#-f %altname.lang
%{_sbindir}/%{name}
%{_datadir}/%{name}/*
#{_iconsdir}/%{name}.png
#{_liconsdir}/%{name}.png
#{_miconsdir}/%{name}.png
#{_datadir}/libDrakX/pixmaps/*.png
#{_datadir}/applications/*.desktop


